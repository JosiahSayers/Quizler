@using Capstone.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-controller="account" asp-action="register" method="post">
    <div class="form-group">
        <label asp-for="DisplayName"></label>
        <input type="text" asp-for="DisplayName"/>
        <span asp-validation-for="DisplayName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmEmail"></label>
        <input type="email" asp-for="ConfirmEmail" />
        <span asp-validation-for="ConfirmEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <input type="submit" value="Register" class="btn btn-default" />

</form>
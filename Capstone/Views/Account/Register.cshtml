@using Capstone.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    .body-content {
        background-color: antiquewhite;
    }

    .register-container {
        -moz-box-shadow: 0px 10px 14px -7px #276873;
        -webkit-box-shadow: 0px 10px 14px -7px #276873;
        box-shadow: 0px 10px 14px -7px #276873;
        background-color: rgba(0, 255, 144, 0.5);
        border-color: aqua;
        border-radius: 10px;
        position: absolute;
        left: 33%;
        top: 20%;
        width: 33%;
        text-align: center;
    }

    h2 {
        margin-bottom: 20%;
        /*color: rgb(1, 200, 199);*/
    }

    .submit-login {
        margin-bottom: 20%;
    }
</style>


<div class="bg">
    <div class="register-container">
        <h2>Register</h2>

        <form asp-controller="account" asp-action="register" method="post">
            <div class="form-group">
                <label asp-for="DisplayName"></label>
                <input type="text" asp-for="DisplayName" />
                <span asp-validation-for="DisplayName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmEmail"></label>
                <input type="email" asp-for="ConfirmEmail" />
                <span asp-validation-for="ConfirmEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <input class="submit-register" type="submit" value="Register" class="btn btn-default" />

        </form>
    </div>
</div>

<link href="~/css/Account/register.css" rel="stylesheet" />
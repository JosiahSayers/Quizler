@model int

@{
    ViewData["Title"] = "Index";
}

<h1>Study Session</h1>

<input type="hidden" value="@Model" id="deckId" />

<div id="study-">
    <div id="study-card">
        <div id="study-card-front">
            <h2 id="card-front"></h2>
        </div>

        <div id="study-card-back">
            <h3 id="card-back"></h3>
        </div>

        <div id="score-tracker">
            <div id="correct-button">
                <i class="fas fa-check"></i>
            </div>
            <div id="wrong-button">
                <i class="fas fa-times"></i>
            </div>
            <div id="score-count">
                <p></p>
            </div>
        </div>
    </div>
</div>

<script defer src="https://use.fontawesome.com/releases/v5.8.1/js/all.js" integrity="sha384-g5uSoOSBd7KkhAMlnQILrecXvzst9TdC09/VM+pjDTCM+1il8RHz5fKANTFFb+gQ" crossorigin="anonymous"></script>
<script src="~/js/Study/Index.js"></script>
<link href="~/css/Study/Index.css" rel="stylesheet" />